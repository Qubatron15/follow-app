---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { semanticColors } from "@/lib/palette";

interface Props {
  title?: string;
}

const { title = "FollowApp - Logowanie" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="min-h-screen flex items-center justify-center p-4"
      style={`background-color: ${semanticColors.background}`}
    >
      <div
        class="w-full max-w-md p-8 rounded-2xl shadow-lg"
        style={`background-color: ${semanticColors.backgroundElevated}; border: 1px solid ${semanticColors.borderSubtle}`}
      >
        <slot />
      </div>
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
